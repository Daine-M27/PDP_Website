extends layout

block content
  #contents(style='margin-bottom:10rem')
    form(action="/quote", method="post")
      br
      label(for="project-name") Project Name:
      br
      input(type="text", name="project-name" style="min-width:350px" required)
      br
      br
      label() Project Address:
      br
      input#projectStreetAddress(type="text", name="project-street-address" style="width: 350px; margin-bottom: 6px", placeholder="Street")
      br
      input#projectStreetAddressTwo(type="text", name="project-street-address-two" style="width: 350px; margin-bottom: 6px", placeholder="Street 2 ")
      br
      input#projectCity(type="text", name="project-city" style="width: 180px; margin-right: 6px;", placeholder="City", required)
      input#projectState(type="text", name="project-state" style="width: 50px; margin-right: 6px;", placeholder="State", required)
      input#projectZip(type="text", name="project-zip" style="width: 92px;", placeholder="Zip")
      
      
      //- input#projectautocomplete(type="text", name="project-address" style="min-width:350px" onfocus="geolocate()" required)
      br
      br
      div(style='border-bottom: 1px solid lightgray')
      br
      br
      label(for="customer-name") Customer Name:
      br
      input#customerName(type="text", name="customer-name" style="min-width:350px" required)
      br
      br
      label(for="customer-company") Customer Company:
      br
      input#customerCompany(type="text", name="customer-company" style="min-width:350px" required)
      br
      br
      //- label(for="customer-email") Customer Email:
      //- br
      //- input#customerEmail(type="text", name="customer-email" style="min-width:350px" required)
      //- br
      //- br
      label() Customer Address:
      br
      input#customerStreetAddress(type="text", name="customer-street-address" style="width: 350px; margin-bottom: 6px", placeholder="Street")
      br
      input#customerStreetAddressTwo(type="text", name="customer-street-address-two" style="width: 350px; margin-bottom: 6px", placeholder="Street 2")
      br
      input#customerCity(type="text", name="customer-city" style="width: 180px; margin-right: 6px;", placeholder="City", required)
      input#customerState(type="text", name="customer-state" style="width: 50px; margin-right: 6px;", placeholder="State", required)
      input#customerZip(type="text", name="customer-zip" style="width: 92px;", placeholder="Zip")
      br
      br
      div(style='border-bottom: 1px solid lightgray')
      br
      br
      label(for="contact-email") Contact Email:
      br
      input#contactEmail(type="text", name="contact-email" style="min-width:350px" required)
      br
      br
      label(for="contact-phone") Contact Phone Number:
      br
      input#contactPhone(type="text", name="contact-phone" style="min-width:350px" required)
      br
      br
      label(for="bid-job") Is this a bid job?
      select#yesBox(type="select" name="bid-job" required style="margin-left:6px")
        option(value="" selected)
        option(value="yes") Yes
        option(value="no") No
      br
      br
      div(style='border-bottom: 1px solid lightgray')
      br
      br
      label(for="batten-Input") Choose a MEGABATTEN to add to quote:
      br
      input#battenInput(list="battensData" name="batten-Input" placeHolder="Begin typing to filter list" style="min-width:350px; margin-bottom:6px; margin-top:6px" onfocus='this.value=""' )
      datalist#battensData
        each pn in partNumbersList 
          option(id=`option${pn.partNumber}` value=`${pn.partNumber}` data-id=`${pn.drawingId}`)
      br
      label(for="batten-Qty" style="") Qty: 
      select#battenQty(type="select" name="batten-Qty" required style="margin-left:6px" )
        - var n = 1;
        while n <= 100
          option(value=`${n}`)= `${n}`
          - n++
      label(for="clabeling" style="margin-left: 35px") Custom Labeling?
      select#clabeling(type="select" name="clabeling" style="margin-left:6px")
        option(value="" selected)
        option(value="yes") Yes
        option(value="no") No 
      br
      button(type="button" onclick="addBatten()" style="margin-top:6px") Add to quote 
      br
      br
      div(style="border-bottom: 1px solid black")
      br
      h3(style="") Quote Items:
      ul#battens
      input#submitButton(type='submit' value='Submit' disabled)
      //- button#submitButton(type="button" onclick="submitData()" style="margin-top:6px" disabled) Submit
        
      
      
  br
  br
  br
  br
  br
  br
  br
  br
  br
